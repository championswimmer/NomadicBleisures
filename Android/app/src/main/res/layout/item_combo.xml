<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="6dp"
        android:id="@+id/rootView">

    <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#22000000"
            android:layout_gravity="center_horizontal"/>

    <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/hotelImage"
                    android:scaleType="centerCrop"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/signika_negative"
                    android:text="Hotel Taj"
                    android:textSize="18sp"
                    android:layout_marginTop="14dp"
                    android:lines="1"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="16dp"
                    android:id="@+id/hotelTitle"
                    android:textColor="@android:color/black"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/hotelRating"
                    android:textSize="18sp"
                    android:text="5"
                    android:drawableRight="@drawable/ic_star"
                    android:drawablePadding="4dp"
                    android:layout_marginLeft="16dp"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/signika_negative"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/hotelPrice"
                    android:textSize="16sp"
                    android:text="Starting from INR 2000"
                    android:layout_marginLeft="16dp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/signika_negative"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/cwImage"
                    android:scaleType="centerCrop"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/signika_negative"
                    android:text="Social Delhi"
                    android:lines="1"
                    android:textSize="18sp"
                    android:layout_marginTop="14dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="16dp"
                    android:id="@+id/cwTitle"
                    android:textColor="@android:color/black"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cwRating"
                    android:textSize="18sp"
                    android:text="5"
                    android:drawableRight="@drawable/ic_star"
                    android:drawablePadding="4dp"
                    android:layout_marginLeft="16dp"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/signika_negative"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cwPrice"
                    android:textSize="16sp"
                    android:text="Starting from INR 2000"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/signika_negative"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_circle"
            android:tint="@color/colorAccent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            android:elevation="10dp"/>

    <com.google.android.material.card.MaterialCardView
            android:layout_gravity="bottom|left"
            android:elevation="5dp"
            app:cardBackgroundColor="@android:color/holo_orange_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">

        <TextView
                android:padding="4dp"
                android:id="@+id/discountText"
                android:textColor="@android:color/white"
                android:visibility="gone"
                android:text="More than 20% below usual prices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
            android:layout_gravity="right|bottom"
            android:elevation="5dp"
            app:cardCornerRadius="4dp"
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">

        <TextView
                android:clickable="true"
                android:paddingHorizontal="18dp"
                android:paddingVertical="10dp"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:text="Book Now"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </com.google.android.material.card.MaterialCardView>


</androidx.cardview.widget.CardView>