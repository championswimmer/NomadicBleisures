<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:orientation="vertical"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_margin="12dp"
                                   app:cardElevation="6dp"
                                   app:cardCornerRadius="6dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <ImageView
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:id="@+id/listingImage"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/signika_negative"
                android:text="Hotel Lols Place"
                android:textSize="22sp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/listingImage"
                android:id="@+id/listingTitle"
                android:maxLines="2"
                android:textColor="@android:color/black"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/signika_negative"
                android:text="4.5/5"
                android:textSize="22sp"
                android:layout_marginTop="4dp"
                android:textStyle="bold"
                android:layout_marginLeft="16dp"
                android:layout_below="@+id/listingTitle"
                android:layout_toRightOf="@+id/listingImage"
                android:id="@+id/listingRating"
                android:textColor="@android:color/black"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/signika_negative"
                android:text="$100"
                android:textSize="22sp"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:layout_marginLeft="16dp"
                android:layout_below="@+id/listingRating"
                android:layout_toRightOf="@+id/listingImage"
                android:id="@+id/listingPrice"
                android:layout_above="@+id/listingSubtitle"
                android:textColor="@android:color/black"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/signika_negative"
                android:text="6 coworking spaces nearby"
                android:textSize="18sp"
                android:layout_marginTop="4dp"
                android:textStyle="bold"
                android:layout_marginLeft="16dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="16sp"
                android:id="@+id/listingSubtitle"
                android:maxLines="2"
                android:layout_below="@+id/listingImage"
                android:textColor="@android:color/black"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>